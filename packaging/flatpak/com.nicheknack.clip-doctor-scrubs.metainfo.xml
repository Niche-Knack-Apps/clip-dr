<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.nicheknack.clip-doctor-scrubs</id>

  <name>Project Scrubs: The Clip Dr.</name>
  <summary>Audio cleaning and clip-making application</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <developer id="com.nicheknack">
    <name>Niche-Knack Apps</name>
  </developer>

  <description>
    <p>
      Project Scrubs: The Clip Dr. is a desktop application for cleaning up audio
      recordings and creating clips. It features CPU-only speech recognition powered
      by OpenAI's Whisper model, making it accessible on any hardware without
      requiring a GPU.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Multi-track audio editing with waveform visualization</li>
      <li>Voice activity detection (VAD) for automatic silence removal</li>
      <li>Speech-to-text transcription with word-level timestamps</li>
      <li>Audio cleaning with noise reduction and spectral processing</li>
      <li>Clip extraction and export to multiple formats</li>
      <li>Search through transcriptions to find specific moments</li>
    </ul>
  </description>

  <url type="homepage">https://niche-knack.com/apps/project-scrubs</url>
  <url type="bugtracker">https://github.com/niche-knack/project-scrubs-clip-dr/issues</url>

  <launchable type="desktop-id">com.nicheknack.clip-doctor-scrubs.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>Main editor view with waveform and transcription</caption>
      <image>https://niche-knack.com/screenshots/project-scrubs/editor.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <releases>
